<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3D9"
    tools:context=".Cadastro3">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="381dp"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/helply_logo_3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Em qual série você
        está atualmente?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.438" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="366dp"
        android:layout_height="267dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeguinte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rb1o"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/nunito"
            android:text="1º ano do E.M."
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rb2o"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/nunito"
            android:text="2º ano do E.M."
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rb3o"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/nunito"
            android:text="3º ano do E.M."
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSeguinte"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:backgroundTint="#00A8FF"
        android:text="Seguinte"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.961" />
</androidx.constraintlayout.widget.ConstraintLayout>